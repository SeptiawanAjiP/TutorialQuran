<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="1"/>

    <TextView
        android:id="@+id/title_surah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Al-Fatihah"
        app:layout_constraintLeft_toRightOf="@id/tv_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_arti_dan_jumlah"
        android:layout_marginLeft="30dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_arti_dan_jumlah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pembukaan | 7 AyatPembukaan | 7 AyatPembukaan | 7 Ayat"
        app:layout_constraintTop_toBottomOf="@id/title_surah"
        app:layout_constraintStart_toEndOf="@id/tv_number"
        app:layout_constraintEnd_toStartOf="@id/tv_arabic"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/tv_arabic"
        android:text="الفاتحة"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
